<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".MathActivity">
    <TextView
        android:layout_width="wrap_content"
        android:text="Please select the answer"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="match_parent"
            android:text="Question:1+1=?"
            android:gravity="center_vertical"
            android:layout_height="45dp"></TextView>

        <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_1a"
                android:text="A:1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_1b"
                android:layout_width="wrap_content"
                android:text="B:2"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_1c"
                android:layout_width="wrap_content"
                android:text="B:3"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_1d"
                android:layout_width="wrap_content"
                android:text="B:4"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="match_parent"
            android:text="Question:1+2=?"
            android:gravity="center_vertical"
            android:layout_height="45dp"></TextView>

        <RadioGroup
            android:id="@+id/rg_2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_2a"
                android:text="A:2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_2b"
                android:layout_width="wrap_content"
                android:text="B:3"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_2c"
                android:layout_width="wrap_content"
                android:text="B:4"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_2d"
                android:layout_width="wrap_content"
                android:text="B:5"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content3"
            android:layout_width="match_parent"
            android:text="Question:1+3=?"
            android:gravity="center_vertical"
            android:layout_height="45dp"></TextView>

        <RadioGroup
            android:id="@+id/rg_3"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_3a"
                android:text="A:1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_3b"
                android:layout_width="wrap_content"
                android:text="B:2"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_3c"
                android:layout_width="wrap_content"
                android:text="B:3"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_3d"
                android:layout_width="wrap_content"
                android:text="B:4"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content4"
            android:layout_width="match_parent"
            android:text="Question:1+4=?"
            android:gravity="center_vertical"
            android:layout_height="45dp"></TextView>

        <RadioGroup
            android:id="@+id/rg_4"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_4a"
                android:text="A:2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_4b"
                android:layout_width="wrap_content"
                android:text="B:3"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_4c"
                android:layout_width="wrap_content"
                android:text="B:5"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:id="@+id/rb_4d"
                android:layout_width="wrap_content"
                android:text="B:6"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"></Button>
</LinearLayout>